<xsd:schema xmlns:p="https://prosidy.org/schema/prosidy.xsd" xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="https://prosidy.org/schema/prosidy.xsd" elementFormDefault="qualified">
    <xsd:complexType name="documentBody">
        <xsd:choice minOccurs="0" maxOccurs="unbounded">
            <xsd:element ref="p:paragraph" />
            <xsd:element ref="p:literal" />
            <xsd:element ref="p:literal-span" />
            <xsd:any namespace="##other" />
        </xsd:choice>
        <xsd:attribute name="title" form="qualified" type="xsd:string" />
        <xsd:anyAttribute namespace="##other" />
    </xsd:complexType>

    <xsd:complexType name="blockContent">
        <xsd:choice minOccurs="0" maxOccurs="unbounded">
            <xsd:any namespace="##other" />
        </xsd:choice>
    </xsd:complexType>

    <xsd:complexType name="inlineContent" mixed="true">
        <xsd:choice minOccurs="0" maxOccurs="unbounded">
            <xsd:any namespace="##other" />
        </xsd:choice>
    </xsd:complexType>

    <xsd:element name="literal" type="xsd:string" />

    <xsd:element name="literal-span" type="xsd:string" />

    <xsd:element name="paragraph" type="p:inlineContent" />

    <xsd:element name="document" type="p:documentBody" />
</xsd:schema>
